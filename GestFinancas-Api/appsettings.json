{
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;port=3306;database=GestFinancasDb;uid=root;password=root;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information", 
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "GestFinancas-Api"
    }
  },
  "Sentry": {
    "Dsn": "",
    "TracesSampleRate": 1.0
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://localhost:4200",
    "http://localhost:3000",
    "http://localhost:5282",
    "https://localhost:5282"
  ],
  "AdminSetupKey": "",
  "Jwt": {
    "SecretKey": "development-only-key-change-in-production-tydCAcQWf0ovmHgmDJL9UycoAsfPY2rxqER6EHEBgWZw5VQnr63HGcKWbN8orcSePSgB4KrNijptEmtPoGZw1Q==",
    "Issuer": "GestFinancasApi",
    "Audience": "GestFinancasUsers"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ]
  },
  "IpRateLimitPolicies": {
    "EndpointRules": [
      {
        "Endpoint": "POST:/api/Usuario/login",
        "Period": "15m",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/Usuario/cadastrar-usuario",
        "Period": "1h",
        "Limit": 3
      }
    ]
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromEmail": "",
    "FromName": "GestFinancas"
  }
}
